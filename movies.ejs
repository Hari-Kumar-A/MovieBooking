<!DOCTYPE html>
<html>
<head>
    <title>Movies</title>
    <style>
        .movie-box {
            margin-top: 40px;
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }
        .movie-item {
            border: 1px solid #ccc;
            padding: 10px;
            width: 30%;
        }
        .movie-poster {
            max-width: 100%;
            height: auto;
        }
    </style>
</head>
<body>
    <h1>Movies</h1>
    <div class="movie-box">
        <% moviesdata.forEach(movie => { %>
            <div class="movie-item">
                <h2><%= movie.l %></h2>
                <img class="movie-poster" src="<%= movie.i.imageUrl %>" alt="<%= movie.l %> Poster">
                <a href="/urls/view/<%= movie.id %>" class="btn">View Details</a>
            </div>
        <% }); %>
    </div>
</body>
</html>
